#!/usr/bin/env node
const path = require("path");
const os = require("os");
const { spawn } = require("child_process");

const suffix = os.platform() === "win32" ? ".exe" : "";

const bin = path.join(__dirname, "fslint" + suffix);

const argv = process.argv;

const ps = spawn(bin, argv.slice(2), {
  stdio: "inherit",
});

ps.on("exit", (code) => {
  process.exit(code);
});
